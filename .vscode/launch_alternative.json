{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jekyll Server - Manual Launch (Recommended)",
      "type": "ruby",
      "request": "launch",
      "program": "${workspaceRoot}/demo",
      "args": [
        "exec",
        "jekyll", 
        "serve",
        "--livereload_port", "25729",
        "--force_polling",
        "--host", "0.0.0.0",
        "--port", "4444",
        "--future",
        "--incremental",
        "--livereload",
        "--drafts",
        "--unpublished"
      ],
      "cwd": "${workspaceRoot}/demo",
      "env": {
        "AppData": "/home/mslinn/.config",
        "JEKYLL_ENV": "development"
      }
    },
    {
      "name": "Jekyll Server - Test Mode",
      "type": "ruby", 
      "request": "launch",
      "program": "${workspaceRoot}/demo",
      "args": [
        "exec",
        "jekyll",
        "build",
        "--future"
      ],
      "cwd": "${workspaceRoot}/demo",
      "env": {
        "AppData": "/home/mslinn/.config",
        "JEKYLL_ENV": "development"
      }
    }
  ]
}