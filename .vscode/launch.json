  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "serve",
        "--livereload_port", "25729",
        "--force_polling",
        "--host", "0.0.0.0",
        "--port", "4444",
        "--future",
        "--incremental",
        "--livereload",
        "--drafts",
        "--unpublished"
      ],
      "cwd": "${workspaceRoot}/demo",
      "debugPort": "45373",
      "env": {
        "JEKYLL_ENV": "development"
      },
      "name": "Debug Demo development",
      // "preLaunchTask": "cleanDemo",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/jekyll",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "serve",
        "--livereload_port", "35732",
        "--force_polling",
        "--host", "0.0.0.0",
        "--port", "4444",
        "--incremental",
        "--livereload"
      ],
      "cwd": "${workspaceRoot}/demo",
      "debugPort": "45373",
      "env": {
        "JEKYLL_ENV": "production"
      },
      "name": "Debug Demo production",
      // "preLaunchTask": "cleanDemo",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/jekyll",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Debug release_kraken",
      "program": "ruby bin/release_kraken"
    },
    {
      "type": "rdbg",
      "name": "Debug custom_error_take_2.rb",
      "request": "launch",
      "script": "experiments/custom_error_take_2.rb",
      "useBundler": true,
    },
    {
      "debugPort": "0",
      "name": "Debug CallChain",
      "type": "rdbg",
      "request": "launch",
      "script": "${workspaceRoot}/lib/call_chain.rb",
      "useBundler": true,
    },
    {
      "debugPort": "45373",
      "name": "Attach with rdbg to 45373",
      "request": "attach",
      "type": "rdbg",
    },
    {
      "args": [
        "-I",
        "../spec",
        "-P", "../spec/*_spec.rb"
      ],
      "cwd": "${workspaceRoot}/demo",
      "debugPort": "0",
      "name": "RSpec - all",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/rspec",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}"
      ],
      "cwd": "${workspaceRoot}/demo",
      "debugPort": "0",
      "name": "RSpec - active spec file only",
      "request": "launch",
      "script": "${workspaceRoot}/binstub/rspec",
      "type": "rdbg",
      "useBundler": true,
    }
  ]
}
